#include <stdio.h>
#include <math.h>
#define PI 3.14

int pontos(char p){
  int p1;

  if(p=='a' || p=='A'){
    p1=0;
  }
  if(p=='b' || p=='B'){
    p1=1;
  }
  if(p=='c' || p=='C'){
    p1=2;
  }
  if(p=='d' || p=='D'){
    p1=3;
  }
  if(p=='e' || p=='E'){
    p1=4;
  }
  if(p=='f' || p=='F'){
    p1=5;
  }
  return p1;
}

int main(void) {
  int m, n,x,y, t1, t2, p1, p2;
  char pA, pB, di, cb, de;
  printf("Informe a quantidade de nós que deseja ter na sua treliça: ");
  scanf("%i", &m);
  float valores[1][1][m][m], valor=123456, angulo, seno, cosseno;

  // 1 é horizontal
  // 0 é vertical
  
  while(pA!='z' && pA!='Z'){
  getchar();
  printf("Informe os pontos da treliça: ");
  scanf("%c%c", &pA, &pB);
  if(pA!='z' && pA!='Z'){
  p1=pontos(pA);
  p2=pontos(pB);
  //printf("\n\nP1: %i\n\n", p1);
  //printf("\n\nP2: %i\n\n", p2);
  
  printf("Ele é em diagonal, vertical ou horizontal? ");
  getchar();
  scanf("%c", &di);
  printf("Para baixo ou para cima? ");
  getchar();
  scanf("%c", &cb);
  printf("Para direita ou para esquerda? ");
  getchar();
  scanf("%c", &de);
  printf("Qual o seu valor? ");
  scanf("%f", &valor); 

  printf("\n%c \t%.2f\n", di, valor);
  if(di=='d'){
    printf("Qual o angulo formado? ");
    scanf("%f", &angulo);

    seno=sin(angulo*PI/180);
    cosseno=cos(angulo*PI/180);

    if(valor==123456){
    if(cb=='c'){
      valores[1][0][p1][p2]=seno;
      valores[1][1][p1][p2]=cosseno;
    }
    else{
      valores[1][0][p1][p2]=cosseno;
      valores[1][1][p1][p2]=seno;
    }
    }
    else{
      valores[1][0][p1][p2]=valor;
      valores[1][1][p1][p2]=valor;
    }
  }
    
    if(di=='h'){
      valores[0][1][p1][p2]=valor;     
    }
    if(di=='v'){
      valores[0][0][p1][p2]=valor;
    }
  }
  };
  
  return 0;
}
